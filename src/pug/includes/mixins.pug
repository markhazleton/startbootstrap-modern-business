// Pug mixins for reusable UI components
mixin feature(icon, title, desc)
  .feature.d-flex.align-items-center.mb-4
    i(class=`bi bi-${icon} me-3 display-5 text-primary`)
    .feature-body
      h5.mb-1= title
      p.mb-0= desc

mixin testimonial(name, text)
  .testimonial.border.rounded.p-3.mb-3
    p.mb-1= text
    small.text-muted= name

mixin cta(text, btnText, btnLink)
  .cta.bg-primary.text-white.p-4.rounded.text-center.mb-4
    h4.mb-3= text
    a.btn.btn-light.btn-lg(href=btnLink)= btnText

extends layouts/layout

block pagehead
  title Testimonials | Modern Business

block layout-content
  .container.py-5
    h2.mb-4.text-center Testimonials
    .carousel.slide#testimonialCarousel(data-bs-ride='carousel')
      .carousel-inner
        .carousel-item.active
          +testimonial('Jane Doe', 'This business is amazing! The service was top-notch and the team is so friendly.')
        .carousel-item
          +testimonial('John Smith', 'Highly recommend to anyone looking for quality and professionalism.')
        .carousel-item
          +testimonial('Alice Johnson', 'A wonderful experience from start to finish.')
      button.carousel-control-prev(type='button', data-bs-target='#testimonialCarousel', data-bs-slide='prev')
        span.carousel-control-prev-icon(aria-hidden='true')
        span.visually-hidden Previous
      button.carousel-control-next(type='button', data-bs-target='#testimonialCarousel', data-bs-slide='next')
        span.carousel-control-next-icon(aria-hidden='true')
        span.visually-hidden Next
